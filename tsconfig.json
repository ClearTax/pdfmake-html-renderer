{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "svelte",
      "snowpack-env",
      "ace-builds",
      "jest",
      "jest-image-snapshot",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ]
  },
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "dist/*",
    "docs/*",
    "playground/build/*"
  ],
}