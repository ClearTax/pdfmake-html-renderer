{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "svelte",
      "vite/client",
      "ace-builds",
      "jest",
      "jest-image-snapshot",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ]
  },
  "exclude": [
    ".yarn/**",
    "node_modules/**",
    "__sapper__/**",
    "public/**",
    "dist/**",
    "docs/**",
    "examples/**"
  ],
}